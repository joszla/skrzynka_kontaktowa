{% extends 'base.html.twig' %}

{% block body %}
    <h1>Person</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ person.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ person.name }}</td>
            </tr>
            <tr>
                <th>Surname</th>
                <td>{{ person.surname }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ person.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('person_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('person_edit', { 'id': person.id }) }}">Edit</a>
        </li>
        <br>
        <br>
        <li>
            <a href="{{path('address_new' , {'personId' : person.id}) }}">Add new address.</a>
        </li>
        <li>
             <a href="{{path('email_new' , {'personId' : person.id}) }}">Add new email.</a>
        </li>
        <li>
             <a href="{{path('phone_new' , {'personId' : person.id}) }}">Add new phone.</a>
        </li>
        <li>
            {% include 'MailboxBundle:address:index.html.twig' %}
        </li>
         <li>
            {% include 'MailboxBundle:email:index.html.twig' %}
        </li>
         <li>
            {% include 'MailboxBundle:phone:index.html.twig' %}
        </li>
      
    </ul>
{% endblock %}
