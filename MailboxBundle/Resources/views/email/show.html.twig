{% extends 'base.html.twig' %}

{% block body %}
    <h1>Email</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ email.id }}</td>
            </tr>
            <tr>
                <th>Email address</th>
                <td>{{ email.emailAddress }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ email.type }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('person_show', {'id' : email.person.id}) }}">Back to the person.</a>
        </li>
        <li>
            <a href="{{ path('email_edit', { 'id': email.id }) }}">Edit</a>
        </li>
    </ul>
{% endblock %}
