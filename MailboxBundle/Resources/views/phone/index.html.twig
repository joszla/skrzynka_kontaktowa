{% extends 'base.html.twig' %}

{% block body %}
    <h1>Phones list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Phonenumber</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for phone in person.phones %}
            <tr>
                <td><a href="{{ path('phone_show', { 'id': phone.id }) }}">{{ phone.id }}</a></td>
                <td>{{ phone.phoneNumber }}</td>
                <td>{{ phone.type }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('phone_show', { 'id': phone.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('phone_edit', { 'id': phone.id }) }}">edit</a>
                        </li>
                        <li>
                          <a href="{{ path('phone_delete', { 'id': phone.id }) }}">delete</a>
                        </li>                             
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
